{
  "kind": "collectionType",
  "collectionName": "doctors",
  "info": {
    "name": "Doctor"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "photo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 1
    },
    "about": {
      "type": "richtext",
      "required": true
    }
  }
}
